<h1>Edit profile information</h1>

<%= simple_form_for [@user] do |f| %>
  <%= f.input :first_name, label: "First name", as: :string %>
  <%= f.input :last_name, label: "Last name", as: :string %>
  <%= f.input :phone_number, label: "Phone number", as: :string %>
  <%= f.input :level, collection: ["beginner", "hobbyist", "semi-pro", "pro"], prompt: "select a volley ball level" %>
  <%= f.input :facebook_page, label: "Facebook page", as: :string %>
  <%= f.input :instagram_account, label: "Instagram account", as: :string %>
  <%= f.input :description, label: "Description - Beach buddies telling about themselves are 30% more likely to be contacted for a match up!", as: :string %>
  <%= f.input :in_outdoors, label: "Do you play mostly indoors or outdoors?", collection: ["indoors", "outdoors"], prompt: "Select" %>
  <%= f.input :gender, collection: ["male", "female"], prompt: "select" %>
  <%= f.input :usual_court_address, label: "Usual court address", as: :string %>
  <%= f.input :photos, label: "Photos - Your beach buddies want to see you in action :)", as: :attachinary %>
  <%= f.submit "Update", class: "btn btn-success"%>
<% end %>
