<% unless @user.videos.empty? %>
  <div class="bbbox">
    <div class="bbbox-title">
      <h4> <%= pluralize_without_count @user.videos.size, "Video" %> </h4>
    </div>
    <div class="bbbox-content">
        <div class="row">
            <% @user.videos.each do |video| %>
              <div class="col-xs-12 col-md-6">
                <iframe height="180" width="320" class="bbbox-video" src=<%= video.url.gsub(/watch.v=/, "embed/") %> frameborder="0" allowfullscreen></iframe>
              </div>
            <% end %>
        </div>
    </div>
  </div>
<% end %>
